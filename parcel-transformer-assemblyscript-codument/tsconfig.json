{
  "compilerOptions": {
    //    "lib": ["DOM", "DOM.Iterable", "es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "sourceMap": true,

    "rootDir": "src",
    "isolatedModules": true,

    "types": [/*"jest",*/ "node"],
    "composite": true,

    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "types": ["node"]
}
