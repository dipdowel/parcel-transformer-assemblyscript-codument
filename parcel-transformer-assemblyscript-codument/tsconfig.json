{
  "compilerOptions": {
    //    "lib": ["DOM", "DOM.Iterable", "es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "src",
    "isolatedModules": true,
    "types": [
      /*"jest",*/
      "node"
    ],
    "composite": false,
    "target": "es2021",
    "module": "NodeNext",
    "declaration": false,
    "outDir": "./dist",
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node"
  ]
}
