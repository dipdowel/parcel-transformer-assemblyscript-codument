{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}


